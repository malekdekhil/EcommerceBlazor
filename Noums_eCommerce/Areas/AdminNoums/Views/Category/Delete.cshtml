@model Domains.Category

@{
    ViewData["Title"] = "Delete";
}


@if (@Model != null)
{
    <h4 class="text-center my-4">
        êtes-vous sûr de vouloir supprimer la catégorie @Model.CategoryName ?
    </h4>
    <h5 class="text-center text-danger my-4">
        Attention tout les produits de la catégorie seront supprimées
    </h5>
}

<div class="text-center">


    <form asp-action="Delete">
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        @if (@ViewBag.productsGet != null)
        {
            @foreach (var prod in @ViewBag.productsGet)
            {
                if (prod.ImageUrl != null)
                {
                    <input hidden name="imgProduct" value="@prod.ImageUrl" />
                }
                if (prod.IdProduct != null)
                {
                    <input hidden name="picturesId" value="@prod.IdProduct" />

                }
       
            }

        }


        <a asp-action="Index">Annuler</a>
    </form>
</div>
